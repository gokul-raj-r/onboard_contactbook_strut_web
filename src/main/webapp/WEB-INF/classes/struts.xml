<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <package name="default" namespace="/" extends="struts-default">
        <action name="add" class="com.raj.newaction" method="execute">
            <result name="success">/success.jsp</result>
            <result name="error">/loginerror.jsp</result>
        </action>

        <action name="display" class="com.raj.newaction" method="display">
            <result name="success">/display.jsp</result>
            <result name="error">/loginerror.jsp</result>
        </action>

        <action name="edit" class="com.raj.newaction" method="edit">
            <result name="success">/success.jsp</result>
            <result name="error">/loginerror.jsp</result>
        </action>

        <action name="delete" class="com.raj.newaction" method="delete">
            <result name="success">/success.jsp</result>
            <result name="error">/loginerror.jsp</result>
        </action>
    </package>

</struts>